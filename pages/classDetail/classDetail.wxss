/* pages/classDetail/classDetail.wxss */

.top{
  display: flex;
  padding: 40rpx 5%;
  margin:0 auto;
  width: 90%;
  justify-content: space-between;
  background-color: white;
}
input{
  position: relative;
  box-sizing: border-box;
  width: 88%;
  height: 60rpx;
  background-color: white;
  border-radius: 20rpx;
  border: 3rpx red solid;
  padding-left: 100rpx;
  font-size: 30rpx;
}

.search_btn{
  position: absolute;
  right: 0rpx;
  top: 0;
  display: inline-block;
  width: 100rpx;
  height: 58rpx;
  line-height: 58rpx;
  text-align: center;
  border-radius: 20rpx;
  color: white;
  font-size: 30rpx;
  background-image:linear-gradient(to right, salmon , red);
  z-index: 99;
}
.record{
  width: 60rpx;
  height:60rpx ;
}

/*  */
.seleBox{
  display: flex;
  height: 100rpx;
  background-color: black;
  color: white;
  line-height: 100rpx;
  padding: 0 20rpx;
}

.seleBox>view{
  font-size: 40rpx;
  width: 250rpx;
  text-align: center;
  color: orange;
  padding-right: 20rpx;
  text-shadow: 0rpx 0rpx 10rpx rgb(247, 212, 148);
}

scroll-view{
  white-space: nowrap;
  font-size: 30rpx;
}
.seleType text{
  padding-right: 20rpx;
}

/*  */
.body{
  background-color: rgb(235, 235, 235);
  height: 100vh;
}
.content{
  padding: 40rpx 10rpx;
  background-color: rgb(235, 235, 235);
  box-sizing: border-box;
  overflow: hidden;
  display: flex;
  justify-content: space-evenly;
}
.goods1{
  width: 44%;
}
.goods2{
  width: 44%;
}

.goods_item{
  width: 80%;
  background-color: white;
  margin-top: 30rpx;
  padding: 10%;
  border-radius: 40rpx;
}

.goods_item image{
  width: 100%;
  /* height: 380rpx; */
}


.discount{
  font-size: 18rpx;
  width: 90rpx;
  border: 1px red solid;
  text-align: center;
  color: red;
  margin: 20rpx 0;
  padding: 5rpx;
}
.discount text:nth-child(1){
  font-size: 20rpx;
  padding: 3rpx 0;
  padding-right:5rpx ;
  border-right: 1px dotted red;
  line-height: 20rpx;
}
.discount text:nth-child(2){
  padding:10rpx 10rpx 10rpx 15rpx;
}
/* discount */

.money{
  font-size: 30rpx;
  margin: 10rpx 0 0 0;
  color: red;
}
.money .before{
  font-size: 20rpx;
  text-decoration: line-through;
  color: #949494;
}

.sales{
  font-size: 22rpx;
  color: #cecece;
  text-align: end;
  border-top: #cecece 1px solid;
  padding: 5rpx 0;
}
.goods_item .title{
  font-size: 24rpx;
  line-height: 38rpx;
  font-weight: 500;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
}

/*  */
.screenBar{
  display: flex;
  position: relative;
}
.screenBox{
  position: relative;
  z-index: 98;
  width: 30%;
  margin: 20rpx auto;
  height: 90rpx;
  background-color: #cccc;
text-align: center;
line-height: 90rpx;
border-radius: 40rpx;
}

.screenBox image{
  /* position: relative; */
  width: 25rpx;
  height: 25rpx;
  /* z-index: 99;
  top: 45%;
  left: 67%; */
}

.seleScnBg{
  position: absolute;
  height: 60rpx;
  background-color:#cccccc;
  width: 30%;
  bottom: 0;
}
.screenText{
  display: flex;
  justify-content: space-evenly;
flex-wrap: wrap;
  position: absolute;
  width: 100%;
  background-color: #cccccc;
  z-index: 999;
  /* border-radius: 20rpx; */
}
.screenText .text{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  width: 100%;
  padding: 20rpx 50rpx;
}
.screenText .text text{
  display: inline-block;
  width: 40%;
  padding-bottom: 10rpx
}

.screenText view[class^="btn_"]{
  width: 40%;
  height: 70rpx;
  margin: 20rpx 0;
  border-radius: 50rpx;
  text-align: center;
  line-height: 70rpx;
  color: white;
}

.btn_re{
  background-color: orange;
}
.btn_ok{
  background-color: red;
}

.mask{
  position: fixed;
  background-color: rgba(0, 0, 0, 0.6);
  height: 100%;
  width: 100%;
}